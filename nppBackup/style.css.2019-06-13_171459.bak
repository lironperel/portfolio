body {
	background-image: url("images/pineapple-wallpaper-pattern.png");	
	margin: 0;
	font-family: 'Raleway', Arial, Helvetica, sans-serif;
	/* background: #434343; */
	color: white;	
	overflow: hidden;
}

#header {
	width: 100%;
	max-width: 700px;
	background: url(par.png) no-repeat center center,linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%);
	text-align: left;
	/* box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); */
	color: white;
	font-size: 2.5rem;
	border-radius: 15px;
	font-family: 'Righteous', cursive;
	padding-left: 2%
	-webkit-box-shadow: 0px 10px 13px -7px #000000, 5px 5px 15px 5px rgba(0,0,0,0); 
	box-shadow: 0px 10px 13px -7px #000000, 5px 5px 15px 5px rgba(0,0,0,0);
}

#wdtext {
	font-size:0.7em;
	position:relative;
    /* bottom:0; */
    right:1.5em;
	top: 0.9em;
	/* text-shadow: 0 0 2px #707377; */
	font-family: 'Rancho', cursive;
	/* color: #6BAD3F; */
	transform: rotate(-8deg);
	opacity: 0.95;
}


#content {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	width: 100%;
}


.column {
	display: flex;
	flex-direction: column;
	flex-basis: 100%;
	flex: 0.7;
}

/* #left { */
	/* width: 20%; */
	/* margin: 0; */
/* } */
/* #right{ */
	/* width: 20%; */
	/* margin: 0; */
/* } */

#middle{
	align-items: center;
	display: flex;
	margin: 1% 0;
	flex: 3;
	justify-content: center;
}

#menu {
	width: 500px;
	margin: 100px 10%;
	display: flex;
	background: #fff;
	border-radius: 15px;
	padding: 1%;
	justify-content: space-between;
	flex-wrap: wrap;
}

#menu-buttons{
	width:100%;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
}

.menu-button {
	height: 100px;
	/* width: 10%; */
	flex: 1 0 40%; 
	flex-wrap: wrap;
	text-align:center;
	font-size: 22px; /*calc(16px + 1vw);*/
	justify-content:center;
	line-height: 100px;
}

.menu-button:hover {
  filter: brightness(90%);
}

#menu-content {
	width: 100%;
	height: 100px;
}

.hidden {
	visibility:hidden;
}

#aboutme{
	background-color: #E3AD21;
	color:#775B12;
	border-top-left-radius: 10px;
	/* -webkit-box-shadow: 10px 10px 0px 0px rgba(0,0,0,0.75); */
	/* -moz-box-shadow: 10px 10px 0px 0px rgba(0,0,0,0.75); */
	/* box-shadow: 10px 10px 0px 0px rgba(0,0,0,0.75); */
}

#resume{
	background-color: #C8EAB3;
	color:#788C6C;
	border-top-right-radius: 10px;
}
#portfolio{
	background-color: #ADC1EE;
	color:#68748F;
	border-bottom-left-radius: 10px;
}

#contact {
	background-color: #F3F3DB;
	color:#919183;
	border-bottom-right-radius: 10px;
}

#footer {
	position:fixed;
	bottom:0;
	width:100%;
	clear: both;
	height: 30px;
	background: #434343;
	text-align: center;
	/* box-shadow: 0px 0px 0px #666666, 0px -1px 15px #666666; */
	color: white;
	vertical-align: middle;
	line-height: 5px; 
	font-size: 0.9em;
}

#loader {
	position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index:99;
	background-color: #434343;
	display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -ms-flex-align: center;
    -webkit-align-items: center;
    -webkit-box-align: center;
	align-items: center;
	justify-content: center;
}

.shadow_container {
	width: auto;
	height: auto;
	display: flex;
	align-items: center;
	justify-content: center;
}    
.shadows {
    position: relative;
    text-shadow: -10px 5px 20px #707377;
    color: white;
    letter-spacing: -0.05em;
    /* font-family: 'Anton', Arial, sans-serif; */
    user-select: none;
    text-transform: uppercase;
    font-size: 2em;
    transition: text-shadow .25s ease-out;
}
.shadows:hover {
    text-shadow: -5px 6px 15px #707377;
}

